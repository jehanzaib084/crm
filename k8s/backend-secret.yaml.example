# Backend Secret Template (for Production with MongoDB Authentication)
# Copy this file to backend-secret.yaml and update with your credentials
# DO NOT commit backend-secret.yaml to version control

apiVersion: v1
kind: Secret
metadata:
  name: backend-secret
type: Opaque
stringData:
  # MongoDB connection string with authentication
  # Replace 'admin' and 'your-secure-password' with actual MongoDB credentials
  DATABASE: "mongodb://admin:your-secure-password@mongodb-service:27017/idurar"
  
  # Add other sensitive backend configuration here
  JWT_SECRET: "your-jwt-secret-here"
  SESSION_SECRET: "your-session-secret-here"

---
# Example commands to create secret directly:
# kubectl create secret generic backend-secret \
#   --from-literal=DATABASE='mongodb://admin:your-password@mongodb-service:27017/idurar' \
#   --from-literal=JWT_SECRET='your-jwt-secret' \
#   --from-literal=SESSION_SECRET='your-session-secret' \
#   -n idurar-crm

---
# To use this secret, update k8s/backend-deployment.yaml:
#
# spec:
#   template:
#     spec:
#       containers:
#       - name: backend
#         envFrom:
#         - configMapRef:
#             name: idurar-config
#         - secretRef:
#             name: backend-secret  # Add this line
