# MongoDB Secret Template
# Copy this file to mongodb-secret.yaml and update with your credentials
# DO NOT commit mongodb-secret.yaml to version control

apiVersion: v1
kind: Secret
metadata:
  name: mongodb-secret
type: Opaque
data:
  # Base64 encoded values
  # To encode: echo -n 'your-username' | base64
  # To decode: echo 'encoded-value' | base64 -d
  username: YWRtaW4=  # Example: 'admin' (replace with your own)
  password: cGFzc3dvcmQ=  # Example: 'password' (replace with your own)

---
# Example commands to create secret directly:
# kubectl create secret generic mongodb-secret \
#   --from-literal=username=admin \
#   --from-literal=password=your-secure-password \
#   -n idurar-crm
